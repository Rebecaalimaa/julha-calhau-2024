#include<stdio.h>

 int main()
{
  char nome[50];
  float salario, percentual, novo_salario;
  
  printf("digite o nome da pesoa:");
  scanf("%s", nome);
  
  printf("digite o salario da pessoa: R$");
  scanf("%f", &salario);
  
  printf("digite o valor do percentual:");
  scanf("%f", &percentual);
  
  novo_salario = salario *(1+percentual/100);
  
  printf("novo_salario de %s: R$%.2f\n", nome, novo_salario);
  
  return 0;
}
